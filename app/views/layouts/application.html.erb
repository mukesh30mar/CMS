<!DOCTYPE html>
<html>
<head>
  <title>
   
     <%= @pagetitle %>
</title>
 <%= stylesheet_link_tag 'learningrails' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

</head>
<body>

<div id='pagewrapper'>
	<div id='header'>
		<p>Making My First Rails Application</p>

	</div>
	
	<div id='navbar'>
	 <ul>
		
		<% @tabs.each do |page| -%>
		 <!-- <li> <%= link_to page.title, view_page_path(page.name) %></li> -->
		<li <%="id='current'" if @page && (@page == page || @page.parent ==page) %>>
			<% if page.redirect? %>
			  <%= link_to page.title, :action => page.action_name, :controller => page.controller_name, :name => page.name %>
			<% else %>
			  <%= link_to page.title, view_page_path(page.name) %>
			<% end %>
			 <!-- <%= link_to page.title, view_page_path(page.name) %></li> -->
	 	<% end -%>
		
	<li><% if logged_in?%>
	     <%=link_to 'log out',logout_path%>
	<%else%>
	  <%=link_to "Log in",login_path%>
	<%end%></li>	
	
	
	 <!-- <li><%= link_to 'Home', view_page_path('Home')%></li>
